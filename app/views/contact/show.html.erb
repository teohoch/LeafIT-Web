<!doctype html>
<html>
  <head>
    <meta charset="UTF-8">
    <% content_for :title, " Contacto" %>
  </head>
  <body>
  <div class="container">
    <div class="row">
      <div class="col-sm-5">

          <h3 class="beauty">Información de contacto</h3>
          <ul class="contact">
              <li><h4>Dirección:</h4>
              <p>Universidad Federico Santa Maria, Casa Central</p></li>
              <li><h4>Teléfono:</h4>
                <p>09-93830775</p>
                <p>09-98919329</p></li>
              <li><h4>Correo de contacto</h4>
              <p><%= mail_to 'contacto@leafit.cl' %></p></li>
          </ul>


      </div>
      <div class="col-sm-6">
        <h3 class="beauty">Formulario de contacto</h3>
        <div class="contact">


          <%= form_tag(:send_contact, :method=>'post') do %>

              <% if flash[:error] %>
                  <p class="flash-error"><%= flash[:error] %></p>
              <% end %>
              <p>Ingrese su nombre:</p>
              <%= text_field_tag 'name', nil, placeholder: 'Ingrese su nombre....' %>
              <br/><br/>
              <p>Ingrese su correo:</p>
              <%= email_field_tag 'email', nil, placeholder: 'Ingrese su e-mail....' %>
              <br/><br/>
              <p>Ingrese su comentario</p>
              <%= text_area_tag 'comment',nil %>
              <br/><br/>
              <%= button_tag 'Enviar', :onvalidation => "alert('Input collected!')"%>
          <% end %>
        </div>

      </div>
    </div>
    <hr/>
   </div>


  </body>
  </html>

<% if flash[:notice] %>
    <script type="text/javascript">
        alert("Su mensaje a sido recibido. Gracias por su Feedback");
    </script>
<% end %>